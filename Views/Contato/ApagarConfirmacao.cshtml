@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de exclusão";
}

<div class="text-center">
    <h3>Deseja realmente excluir o contato @Model.Nome? </h3>
</div>

<a class="btn btn-primary btn-block" role="button"  asp-route-id="@Model.Id" asp-controller="Contato" asp-action="Apagar">Confirmar exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Contato" asp-action="Index"  >Cancelar exclusão</a>

